   journal = {Biochemistry and Biophysics Reports},
   pages = {100731},
   publisher = {Elsevier B.V.},
   title = {Immunological microenvironment gene expression in patients with diffuse large B cell non Hodgkin lymphoma},
   volume = {21},
   year = {2020},
}
@article{Bosch2017,
