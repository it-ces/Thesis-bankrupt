   doi = {10.1093/aje/kwq323},
   issn = {0002-9262},
   issue = {1},
   journal = {American Journal of Epidemiology},
   month = {1},
   pages = {71-83},
   pmid = {21084556},
   title = {Mortality in the Agricultural Health Study, 1993-2007},
   volume = {173},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/21084556 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3025641 https://academic.oup.com/aje/article-lookup/doi/10.1093/aje/kwq323},
